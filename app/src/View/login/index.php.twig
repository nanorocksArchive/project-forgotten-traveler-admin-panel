{% extends "/layout/template.php.twig" %}

{% block title %}Login{% endblock %}
{% block header %}
{% endblock %}
{% block content %}
    <div class="content">
        <div class="container mt-5 pt-5">
            <div class="row">
                <div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-10 offset-sm-1 col-12">
                    <div class="card p-4 shadow-lg">
                        <img src="/img/logo.png" alt="logo" class="d-block mx-auto img-fluid" style="border-radius: 20px">
                        <p class="text-center h4 font-weight-light mb-3">
                            Forgotten Traveler</p>
                        <form>
                            <div class="form-group">
                                <input type="email" class="form-control is-invalid" id="exampleInputEmail1"
                                       aria-describedby="emailHelp" placeholder="Enter email">
                            </div>
                            <div class="form-group pb-2">
                                <input type="password" class="form-control is-invalid" id="exampleInputPassword1"
                                       placeholder="Password">
                            </div>
                            <div class="alert alert-danger mt-3 small text-center" role="alert">
                                Invalid email or password
                            </div>
                            <button type="submit" class="btn btn-primary btn-block font-weight-bolder">LOGIN</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block footer %}
    {{ parent() }}
{% endblock %}
